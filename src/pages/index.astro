---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login" description="Iniciar Sesión">
	<div class="flex w-full h-screen justify-center items-center">
		<div class="p-3 border md:w-2/6 flex flex-col gap-3 rounded-sm">
			<div class="flex flex-col justify-center items-center">
				<h1 class="text-2xl font-extrabold">Clone de Instagram</h1>
				<p>Inicia sesión para ver fotos y videos de tus amigos.</p>
			</div>
			<form id="form-login" method="post" class="flex flex-col gap-2">
				<input
					type="email"
					id="email"
					name="email"
					required
					placeholder="Correo electrónico"
					class="p-1 bg-transparent border rounded-sm"
				/>
				<input
					type="password"
					id="password"
					name="password"
					required
					placeholder="Contraseña"
					class="p-1 bg-transparent border rounded-sm"
				/>
				<button type="submit" class="bg-blue-500 rounded p-2"
					>Iniciar Sesión</button
				>
			</form>
			<!-- or -->
			<div class="flex justify-center items-center">
				<div class="border h-0 w-full"></div>
				<span class="mx-2">O</span>
				<div class="border h-0 w-full"></div>
			</div>
			<!-- Login with facebook -->
			<div class="flex items-center justify-center text-blue-500">
				<svg
					aria-label="Iniciar sesión con Facebook"
					class="x1lliihq x1n2onr6 x173jzuc"
					fill="currentColor"
					height="20"
					role="img"
					viewBox="0 0 16 16"
					width="20"
					><title>Iniciar sesión con Facebook</title><g
						clip-path="url(#a)"
						><path
							d="M8 0C3.6 0 0 3.6 0 8c0 4 2.9 7.3 6.8 7.9v-5.6h-2V8h2V6.2c0-2 1.2-3.1 3-3.1.9 0 1.8.2 1.8.2v2h-1c-1 0-1.3.6-1.3 1.3V8h2.2l-.4 2.3H9.2v5.6C13.1 15.3 16 12 16 8c0-4.4-3.6-8-8-8Z"
							fill="currentColor"></path></g
					><defs
						><clipPath id="a"
							><rect fill="currentColor" height="16" width="16"
							></rect></clipPath
						></defs
					></svg
				>
				<button class="font-bold p-2 rounded-sm hover:text-gray-100"
					>Iniciar Sesión con Facebook</button
				>
			</div>
			<!-- Forgot password -->
			<div class="w-full flex justify-center">
				<a href="#" class="text-gray-100">¿Olvidaste tu contraseña?</a>
			</div>
		</div>
	</div>
</Layout>
<script>
	const formLogin = document.getElementById("form-login") as HTMLFormElement;

	formLogin.addEventListener("submit", (e) => {
		e.preventDefault();
		window.location.href = "/home";
	});
</script>
